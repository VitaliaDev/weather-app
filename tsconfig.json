{
  "compilerOptions": {
    "target": "es2020", // This should be es2020 or higher
    "module": "es2020", // This should also be es2020 or higher
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["vite/client", "node", "jest", "@testing-library/jest-dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/i18n.ts",
    "src/__tests__/**/*",
    "jest.config.ts",
    "config/jest.setup.ts",

    "src/global.d.ts"
, "src/__mocks__"  ],
  "exclude": ["node_modules"]
}
